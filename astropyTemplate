<script language="Javascript" type="text/javascript">
function myFunction() { 
http://stackoverflow.com/questions/19503878/loop-read-each-line-of-a-file-to-its-own-array
var flag = true;
var data=file(document.getElementById("upload"))
var lines = data.split("\n");
var firstline=lines[0].split(" ");
if ((firstline.length != 2) || (!(firstline[0].instanceOf(int))) ||(!(firstline[1].instanceOf(int)))) {
	flag = false;
	}
for (int i = 1; i <= lines.length; i++) {
	ints = lines[i].split(" ");
	if ((ints.length!=4) || (!(ints[0].instanceOf(int))) || (!(ints[1].instanceOf(int)))|| (!(ints[2].instanceOf(int)))|| (!(ints[3].instanceOf(int)))) {
		flag=false;
	}
if (flag==false) {
	document.getElementById("uploadresult").innerHTML = "Incorrect File format.";
	}
else {
	document.getElementById("uploadresult").innerHTML = "File successfully uploaded. Option added to data sources above.";
	var x = document.getElementById("DataSource");
	var option = document.createElement("option");
	var y = document.uploadForm.upload.value;
	option.text = y;
	option.name = y;
	x.add(option);
	}
}
	
</script>
